FROM python:3.13-slim

WORKDIR /env  
RUN apt-get update && apt-get install -y --no-install-recommends ffmpeg libgl1 libglfw3 && rm -rf /var/lib/apt/lists/*
COPY envs/gym_adapter/ /env/
RUN pip install --no-cache-dir -r requirements.txt
EXPOSE 50051
CMD ["python","server.py","--task","gym:CartPole-v1","--port","50051"]

